<UserControl x:Class="StockTickerExtension2019.StockToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:scottplt="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:vsfx="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             Background="{DynamicResource VsBackgroundBrush}">

    <UserControl.Resources>
        <!-- Button 默认样式 -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vsfx:EnvironmentColors.ToolWindowTextBrushKey}}"/>
            <Setter Property="Background" Value="{DynamicResource {x:Static vsfx:EnvironmentColors.ToolWindowBackgroundBrushKey}}"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vsfx:EnvironmentColors.ToolWindowTextBrushKey}}"/>
            <Setter Property="Background" Value="{DynamicResource {x:Static vsfx:EnvironmentColors.ToolWindowBackgroundBrushKey}}"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vsfx:EnvironmentColors.ToolWindowTextBrushKey}}"/>
            <Setter Property="Background" Value="{DynamicResource {x:Static vsfx:EnvironmentColors.ToolWindowBackgroundBrushKey}}"/>
        </Style>

    </UserControl.Resources>

    <!-- 外层滚动容器：垂直滚动、水平自适应 -->
    <ScrollViewer VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Auto"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch"
              PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">

        <!-- 主布局：左对齐并水平填满 -->
        <Grid Margin="0"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Top"
          Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"
          Background="{DynamicResource {x:Static vsfx:EnvironmentColors.ToolWindowBackgroundBrushKey}}">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 顶部控制面板 -->
            <StackPanel Orientation="Horizontal" Margin="6" Grid.Row="0" HorizontalAlignment="Left">
                <ComboBox x:Name="StockTypeComboBox" Width="80" SelectedIndex="0" Margin="6,0"/>
                <TextBlock x:Name="StockCode" Text="Watch list:" VerticalAlignment="Center" Margin="6,0"/>
                <ComboBox x:Name="CodeTextBox" Width="150" SelectedIndex="0" Margin="6,0" IsEditable="True"/>
                <Button x:Name="StartBtn" Content="Start" Margin="6,0" Width="80" Cursor="Hand" />
                <Button x:Name="StopBtn" Content="Stop" Margin="6,0" Width="80" Cursor="Hand"/>
                <Button x:Name="AddBtn" Content="+" Margin="6,0" Width="24" Height="24" VerticalAlignment="Center" Cursor="Hand" />
                <Button x:Name="RemoveBtn" Content="-" Margin="3,0" Width="24" Height="24" VerticalAlignment="Center" Cursor="Hand" />
                <CheckBox x:Name="AutoStopCheckBox" Content="Stop when closed" IsChecked="False" Margin="10,0" VerticalAlignment="Center"/>
                <ComboBox x:Name="PeriodComboBox" Width="100" SelectedIndex="0" Margin="6,0"/>
                <DatePicker x:Name="DatePickerControl" Width="110" Margin="6,0" IsEnabled="False"
                        SelectedDate="{x:Static sys:DateTime.Today}"
                        DisplayDateEnd="{x:Static sys:DateTime.Today}"
                        VerticalAlignment="Center"/>
            </StackPanel>

            <!-- 第二行：持仓信息 -->
            <StackPanel Orientation="Horizontal" Margin="6" Grid.Row="1" HorizontalAlignment="Left">
                <TextBlock x:Name="NumberSharesBox" Text="Number of Shares:" VerticalAlignment="Center" Margin="6,0" />
                <TextBox x:Name="SharesBox" Width="80" Text="" />
                <TextBlock Text="Cost Price:" VerticalAlignment="Center" Margin="6,0"/>
                <TextBox x:Name="CostBox" Width="60" Text=""/>
                <TextBlock x:Name="CurrentPriceLabel" Text="Current:" VerticalAlignment="Center" Margin="6,0" FontWeight="Bold" />
                <TextBlock x:Name="CurrentPriceText" Text="--" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="OpenPriceLabel" Text="Open:" VerticalAlignment="Center" Margin="6,0" />
                <TextBlock x:Name="OpenPriceText" Text="--" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="HighestPriceLabel" Text="High:" VerticalAlignment="Center" Margin="6,0" />
                <TextBlock x:Name="HighestPriceText" Text="--" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="LowestPriceLabel" Text="Low:" VerticalAlignment="Center" Margin="6,0" />
                <TextBlock x:Name="LowestPriceText" Text="--" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="Fluctuation" Text="Fluctuation:" VerticalAlignment="Center" Margin="6,0"/>
                <TextBlock x:Name="ChangePercentText" Text="--%" FontWeight="Bold" Margin="6,0" VerticalAlignment="Center" />
                <TextBlock x:Name="PositionProfitText" Text="Total: --" Margin="6,0"/>
                <TextBlock x:Name="TodayProfitText" Text="Today: --" Margin="6,0"/>
                <TextBlock x:Name="StatusText" Text="Stoped" VerticalAlignment="Center" Margin="6,0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="6" Grid.Row="2" HorizontalAlignment="Left">
                <CheckBox x:Name="MA5" Content="MA5" IsChecked="True" Margin="6,0" VerticalAlignment="Center" Cursor="Hand"/>
                <CheckBox x:Name="MA10" Content="MA10" IsChecked="True" Margin="6,0" VerticalAlignment="Center" Cursor="Hand"/>
                <CheckBox x:Name="MA20" Content="MA20" IsChecked="True" Margin="6,0" VerticalAlignment="Center" Cursor="Hand"/>
                <CheckBox x:Name="MA30" Content="MA30" IsChecked="True" Margin="6,0" VerticalAlignment="Center" Cursor="Hand"/>
                <CheckBox x:Name="MA60" Content="MA60" IsChecked="True" Margin="6,0" VerticalAlignment="Center" Cursor="Hand"/>
            </StackPanel>
            <!-- 第三行：图表区域 -->
            <Grid Grid.Row="3" Margin="3">
                <Grid.RowDefinitions>
                    <!-- 主图：价格/K线 -->
                    <RowDefinition Height="3*"/>
                    <!-- 副图：成交量 -->
                    <RowDefinition Height="1.5*"/>
                </Grid.RowDefinitions>
                <scottplt:WpfPlot x:Name="WpfPlotPrice" Height="240" Grid.Row="0" HorizontalAlignment="Stretch" Margin="0,0,20,6"
                       Background="{DynamicResource {x:Static vsfx:EnvironmentColors.ToolWindowBackgroundBrushKey}}"/>
                <scottplt:WpfPlot x:Name="WpfPlotVolume" Height="200" Grid.Row="1" HorizontalAlignment="Stretch" Margin="0,0,20,6"
                       Background="{DynamicResource {x:Static vsfx:EnvironmentColors.ToolWindowBackgroundBrushKey}}" />
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
